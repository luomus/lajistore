{
  "settings": {
    "number_of_shards": 3,
    "index.mapping.ignore_malformed": true,
    "index.max_result_window": 1000000,
    "index.mapping.total_fields.limit": 10000,
    "index.mapping.nested_objects.limit": 100000,
    "analysis": {
      "normalizer": {
        "useLowercase": {
          "type": "custom",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "@context": {
        "type": "keyword"
      },
      "id": {
        "type": "keyword",
        "normalizer": "useLowercase"
      },
      "@type": {
        "type": "keyword"
      },
      "dc:bibliographicCitation": {
        "properties": {
          "en": {
            "type": "keyword",
            "ignore_above": 200,
            "normalizer": "useLowercase"
          },
          "fi": {
            "type": "keyword",
            "ignore_above": 200,
            "normalizer": "useLowercase"
          },
          "sv": {
            "type": "keyword",
            "ignore_above": 200,
            "normalizer": "useLowercase"
          }
        }
      },
      "description": {
        "properties": {
          "en": {
            "type": "keyword",
            "ignore_above": 200,
            "normalizer": "useLowercase"
          },
          "fi": {
            "type": "keyword",
            "ignore_above": 200,
            "normalizer": "useLowercase"
          },
          "sv": {
            "type": "keyword",
            "ignore_above": 200,
            "normalizer": "useLowercase"
          }
        }
      },
      "descriptionURL": {
        "properties": {
          "en": {
            "type": "keyword",
            "ignore_above": 200,
            "normalizer": "useLowercase"
          },
          "fi": {
            "type": "keyword",
            "ignore_above": 200,
            "normalizer": "useLowercase"
          },
          "sv": {
            "type": "keyword",
            "ignore_above": 200,
            "normalizer": "useLowercase"
          }
        }
      },
      "hasPublicLocations": {
        "type": "boolean"
      },
      "nickname": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "ringID": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "taxon": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "deleted": {
        "type": "boolean"
      },
      "images": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "intellectualRights": {
        "type": "keyword",
        "ignore_above": 200
      },
      "ownerPerson": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "_meta": {
        "properties": {
          "created": {
            "type": "date"
          },
          "edited": {
            "type": "date"
          }
        }
      }
    }
  }
}