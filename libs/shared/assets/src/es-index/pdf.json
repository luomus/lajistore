{
  "settings": {
    "number_of_shards": 3,
    "index.mapping.ignore_malformed": true,
    "index.max_result_window": 1000000,
    "index.mapping.total_fields.limit": 10000,
    "index.mapping.nested_objects.limit": 100000,
    "analysis": {
      "normalizer": {
        "useLowercase": {
          "type": "custom",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "@context": {
        "type": "keyword"
      },
      "id": {
        "type": "keyword",
        "normalizer": "useLowercase"
      },
      "@type": {
        "type": "keyword"
      },
      "caption": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "documentURI": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "fullURL": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "keyword": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "largeURL": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "originalFilename": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "originalURL": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "pdfURL": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "sourceSystem": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "squareThumbnailURL": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "thumbnailURL": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "uploadDateTime": {
        "type": "date"
      },
      "uploadedBy": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "intellectualOwner": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase"
      },
      "intellectualRights": {
        "type": "keyword",
        "ignore_above": 200
      },
      "publicityRestrictions": {
        "type": "keyword",
        "ignore_above": 200
      },
      "_meta": {
        "properties": {
          "created": {
            "type": "date"
          },
          "edited": {
            "type": "date"
          }
        }
      }
    }
  }
}