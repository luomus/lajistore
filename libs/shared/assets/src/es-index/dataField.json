{
  "settings": {
    "number_of_shards": 3,
    "index.mapping.ignore_malformed": true,
    "index.max_result_window": 1000000,
    "index.mapping.total_fields.limit": 10000,
    "index.mapping.nested_objects.limit": 100000,
    "index.max_ngram_diff": 4,
    "analysis": {
      "tokenizer": {
        "autocomplete": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 10
        }
      },
      "normalizer": {
        "useLowercase": {
          "type": "custom",
          "filter": [
            "lowercase"
          ]
        }
      },
      "analyzer": {
        "autocomplete": {
          "type": "custom",
          "tokenizer": "autocomplete",
          "filter": [
            "lowercase"
          ]
        },
        "autocomplete_search": {
          "tokenizer": "lowercase"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "@context": {
        "type": "keyword"
      },
      "id": {
        "type": "keyword",
        "normalizer": "useLowercase"
      },
      "@type": {
        "type": "keyword"
      },
      "herbo:sortOrder": {
        "type": "integer"
      },
      "apiName": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase",
        "fields": {
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "description": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase",
        "fields": {
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "example": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase",
        "fields": {
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "includeFull": {
        "type": "boolean"
      },
      "includeSecurePortalUI": {
        "type": "boolean"
      },
      "includeUI": {
        "type": "boolean"
      },
      "name": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase",
        "fields": {
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "rPackageName": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase",
        "fields": {
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "shortName": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase",
        "fields": {
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "techicalNotes": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase",
        "fields": {
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "technicalName": {
        "type": "keyword",
        "ignore_above": 200,
        "normalizer": "useLowercase",
        "fields": {
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "sortOrder": {
        "type": "integer"
      },
      "_meta": {
        "properties": {
          "created": {
            "type": "date"
          },
          "edited": {
            "type": "date"
          }
        }
      }
    }
  }
}