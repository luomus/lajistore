{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "subject": "TDF.trait",
  "additionalProperties": false,
  "title": "Trait",
  "description": "",
  "properties": {
    "@context": {
      "type": "string",
      "range": "xsd:string",
      "subject": "@context",
      "title": "Context for the Trait"
    },
    "id": {
      "type": "string",
      "range": "xsd:string",
      "subject": "id",
      "title": "Id for the Trait"
    },
    "@type": {
      "type": "string",
      "range": "xsd:string",
      "subject": "@type",
      "title": "Type for the Trait"
    },
    "baseUnit": {
      "type": "string",
      "range": "TDF.unitOfMeasurement",
      "subject": "TDF.baseUnit",
      "title": "Base unit of measurement",
      "sortOrder": -1
    },
    "dataEntryName": {
      "type": "string",
      "range": "xsd:string",
      "subject": "TDF.dataEntryName",
      "title": "Data entry short name/code",
      "sortOrder": -1
    },
    "description": {
      "type": "string",
      "range": "xsd:string",
      "subject": "TDF.description",
      "title": "Description",
      "sortOrder": -1
    },
    "exampleValues": {
      "type": "string",
      "range": "xsd:string",
      "subject": "TDF.exampleValues",
      "title": "Example values",
      "sortOrder": -1
    },
    "externalIdentifier": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "range": "xsd:string",
      "subject": "TDF.externalIdentifier",
      "title": "Identifier of this trait in some other vocabulary",
      "sortOrder": -1
    },
    "hasEnumeration": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "range": "TDF.traitEnumValue",
      "subject": "TDF.hasEnumeration",
      "title": "Has enumeration",
      "sortOrder": -1
    },
    "name": {
      "type": "string",
      "range": "xsd:string",
      "subject": "TDF.name",
      "title": "Name",
      "sortOrder": -1
    },
    "partOfGroup": {
      "type": "string",
      "range": "TDF.traitGroup",
      "subject": "TDF.partOfGroup",
      "title": "Part of trait group",
      "sortOrder": -1
    },
    "reference": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "range": "xsd:string",
      "subject": "TDF.reference",
      "title": "Reference/publication for this trait",
      "sortOrder": -1
    }
  },
  "required": [
    "dataEntryName",
    "description",
    "name",
    "partOfGroup"
  ]
}